<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <h1 class="col-6 offset-3">LogIn On Wanderlust</h1>
  <div class="col-6 offset-3">
    <form method="post" action="/login" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          class="form-control"
          id="username"
          name="username"
          type="text"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          class="form-control"
          id="password"
          name="password"
          type="password"
          class="form-control"
          required
        />
      </div>
      <button class="mb-3 btn btn-success">LogIn</button>
    </form>
  </div>
</div>
